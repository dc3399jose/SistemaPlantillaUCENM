@model SistemaPlanillaUCENM.Models.Empleado

<div class="container mt-4">
    <h2>Cálculo de Planilla - Salama, Olancho</h2>
    <form asp-action="Calcular" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label>Nombre Completo:</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Horas Trabajadas:</label>
                <input asp-for="HorasTrabajadas" type="number" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Pago por Hora (Lps):</label>
                <input asp-for="PagoPorHora" type="number" step="0.01" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-success">Procesar Salario</button>
    </form>
</div>