@model IEnumerable<SistemaPlanillaUCENM.Models.Prestamo>

<div class="container mt-4">
    <h2 class="text-success border-bottom pb-2">Historial de Cotizaciones de Préstamos</h2>
    <table class="table table-hover mt-3 shadow-sm">
        <thead class="table-success">
            <tr>
                <th>Cliente</th>
                <th>Monto</th>
                <th>Cuota</th>
                <th>Riesgo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>L @item.Monto.ToString("N2")</td>
                    <td class="fw-bold">L @item.CuotaMensual.ToString("N2")</td>
                    <td>
                        <span class="badge @(item.NivelRiesgo == "Alto" ? "bg-danger" : "bg-warning text-dark")">
                            @item.NivelRiesgo
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-outline-success">Nueva Cotización</a>
</div>