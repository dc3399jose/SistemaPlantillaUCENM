@model IEnumerable<SistemaPlanillaUCENM.Models.Empleado>

<div class="container mt-4">
    <h2 class="text-primary border-bottom pb-2">Historial de Planillas Guardadas</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Horas</th>
                    <th>S. Bruto</th>
                    <th>Impuesto</th>
                    <th>S. Neto</th>
                    <th>Nivel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.HorasTrabajadas</td>
                        <td>L @item.SalarioBruto.ToString("N2")</td>
                        <td class="text-danger">L @item.Impuesto.ToString("N2")</td>
                        <td class="fw-bold">L @item.SalarioNeto.ToString("N2")</td>
                        <td><span class="badge bg-info text-dark">@item.Clasificacion</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver al Formulario</a>
</div></div>