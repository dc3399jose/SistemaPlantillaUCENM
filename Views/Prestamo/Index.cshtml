@model SistemaPlanillaUCENM.Models.Prestamo

@{
    ViewData["Title"] = "Cotizador de Préstamos";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center">Sistema de Cotización de Préstamos</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Cotizar" method="post">

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Solicitante:</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej. Juan Pérez" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Monto" class="form-label">Monto del Préstamo (Lps):</label>
                                <input asp-for="Monto" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Meses" class="form-label">Plazo en Meses:</label>
                                <input asp-for="Meses" type="number" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TipoCliente" class="form-label">Tipo de Cliente:</label>
                            <select asp-for="TipoCliente" class="form-select" required>
                                <option value="">-- Seleccione una opción --</option>
                                <option value="Nuevo">Nuevo (18%)</option>
                                <option value="Frecuente">Frecuente (12%)</option>
                                <option value="Preferencial">Preferencial (8%)</option>
                            </select>
                            <small class="text-muted">Nota: Clientes preferenciales tienen beneficio en nivel de riesgo.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Calcular Cotización</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>